#include <stdio.h>
#include <stdlib.h>

int main( ) {
	float a, b;
	scanf("%f %f", &a, &b);
	switch ( a ){
		case 1: printf("Total: R$ %.2f\n", 4 * b);
		case 2: printf("Total: R$ %.2f\n", 4.5 * b);
		case 3: printf("Total: R$ %.2f\n", 5 * b);
		case 4: printf("Total: R$ %.2f\n", 2 * b);
		case 5: printf("Total: R$ %.2f\n", 1.5 * b);
	}
	return 0;
}
